#include<stdio.h>
void main(){
    int data[4];
    int num;
    printf("\nPlease enter the data::");
    for(int i=0;i<4;i++){
    scanf("%d",&data[i]);
    }
    int arr[7];
    arr[4]=data[3];
    arr[2]=data[2];
    arr[1]=data[1];
    arr[0]=data[0];
    //sum=arr[2]+arr[4]+arr[5]+arr[6];
    int p1,p2,p4;
    p1=data[3]+data[2]+data[0];
    p2=data[3]+data[1]+data[0];
    p4=data[2]+data[1]+data[0];
    printf("\n enter 1 for even parity and 2 for for odd parity");
    scanf("%d",&num);
    switch (num)
    {
    case 1:
        if((p1%2)==0){
            arr[6]=0;
        }
        if((p1%2)!=0)
        {
            arr[6]=1;
        }
         if(p2%2==0){
            arr[5]=0;
        }
        if((p2%2)!=0)
        {
            arr[5]=1;
        }
        if(p4%2==0){
            arr[3]=0;
        }
        if((p4%2)!=0)
        {
            arr[3]=1;
        }
    case 2:
        if((p1%2)==0){
            arr[0]=1;
        }
        else
        {
            arr[0]=0;
        }
         if(p2%2==0){
            arr[1]=1;
        }
        else
        {
            arr[1]=0;
        }
         if(p4%2==0){
            arr[3]=1;
        }
        else
        {
            arr[3]=0;
        }
        for(int i=0;i<=6;i++){
            printf("%d ",arr[i]);
        }
        break;
    default :
    printf("\n enter proper value");
    break;
    }
}
